<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_contoller"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.prakmobilemodul4.WelcomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_welcome" />
    <fragment
        android:id="@+id/list1"
        android:name="com.example.prakmobilemodul4.List1Fragment"
        android:label="Pen tablet"
        tools:layout="@layout/fragment_list1" />
    <fragment
        android:id="@+id/list2"
        android:name="com.example.prakmobilemodul4.List2Fragment"
        android:label="Pen Display"
        tools:layout="@layout/fragment_list2" />
    <fragment
        android:id="@+id/list3"
        android:name="com.example.prakmobilemodul4.List3Fragment"
        android:label="Tablet Digital"
        tools:layout="@layout/fragment_list3" />
    <fragment
        android:id="@+id/setting"
        android:name="com.example.prakmobilemodul4.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/detailList1"
        android:name="com.example.prakmobilemodul4.DetailList1"
        android:label="Detail"
        tools:layout="@layout/fragment_detail_list1">
        <argument
            android:name="judul"
            app:argType="integer" />
        <argument
            android:name="harga"
            app:argType="integer" />
        <argument
            android:name="gambar"
            app:argType="integer" />
        <argument
            android:name="detail"
            app:argType="integer" />
    </fragment>
</navigation>